<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:focusable="true"
	android:foreground="?attr/selectableItemBackgroundBorderless"
	app:cardCornerRadius="8dp"
	app:cardElevation="8dp"
	app:cardUseCompatPadding="true"
	>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="150dp"
		android:padding="16dp"
		>

		<TextView
			android:id="@+id/tv_row_question_open_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="20sp"
			android:textStyle="bold"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="Pytanie 1"
			/>

		<TextView
			android:id="@+id/tv_row_question_open_answers_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:layout_marginRight="10dp"
			android:text="@string/label_question_answers_state"
			android:textSize="14sp"
			android:textStyle="bold"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@id/tv_row_question_open_answers"
			app:layout_constraintTop_toBottomOf="@id/tv_row_question_open_name"
			app:layout_constraintVertical_bias="1"
			/>

		<TextView
			android:id="@+id/tv_row_question_open_answers"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toBottomOf="@id/tv_row_question_open_answers_label"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="@id/tv_row_question_open_answers_label"
			tools:text="2/10"
			/>
	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>